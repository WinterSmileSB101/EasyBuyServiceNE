<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <dataCommand name="AddPostHistoryInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
INSERT INTO [dbo].[PostHistory]
   ([ID]
   ,[PostID]
   ,[PostName]
   ,[PostCost]
   ,[PostDescription]
   ,[PostSpeed]
   ,[PostStart]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser])
VALUES
  (
  @ID,
  @PostID,
  @PostCost,
  @PostDescription,
  @PostSpeed,
  @PostStart,
  GETDATE(),
  @InUser,
  GETDATE(),
  @InUser
  )
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="AlterPostHistoryInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[PostHistory] 
   SET [PostCost]=@PostCost
      ,[PostDescription]=@PostDescription
      ,[PostSpeed]=@PostSpeed
      ,[PostStart]=@PostStart
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [PostID] = @PostID
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="GetPostHistoryInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
SELECT @TotalCount=COUNT(1)  
  FROM [dbo].[PostHistory] WITH(NOLOCK)
#StrWhere#

SELECT [ID]
   ,[PostID]
   ,[PostName]
   ,[PostCost]
   ,[PostDescription]
   ,[PostSpeed]
   ,[PostStart]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser]
FROM [dbo].[PostHistory] WITH(NOLOCK)
#StrWhere#
ORDER BY #SortColumnName#
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="RemovePostHistoryInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
DELETE
FROM [dbo].[PostHistory]
#StrWhere#
          ]]>
    </commandText>
  </dataCommand>

</dataOperations>
