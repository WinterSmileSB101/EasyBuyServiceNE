  <dataCommand name="GetUserInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
SELECT @TotalCount=COUNT(1)  
  FROM [dbo].[User] WITH(NOLOCK)
#StrWhere#

SELECT [UserID],
       [UserName],
       [UserPassWord],
       [Email],
       [Phone],
       [LastChangeUserNameDate],
       [Role],
       [InDate],
       [InUser],
       [LastEditDate],
       [LastEditUser]
FROM [dbo].[User] WITH(NOLOCK)
#StrWhere#
ORDER BY #SortColumnName#
          ]]>
    </commandText>
