<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <dataCommand name="AddUserInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
INSERT INTO [dbo].[User]
   ([UserID]
   ,[UserName]
   ,[UserPassWord]
   ,[Email]
   ,[Phone]
   ,[lastChangeUserNameDate]
   ,[Role]
   ,[DefaultAddressID]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[lastEditUser])
VALUES
  (
  @UserID,
  @UserName,
  @UserPassWord,
  @Email,
  @Phone,
  DATEADD(m,-3,GETDATE()),
  @Role,
  @DefaultAddressID,
  GETDATE(),
  @InUser,
  GETDATE(),
  @InUser
  )
          ]]>
    </commandText>
  </dataCommand>
  <dataCommand name="AlterUserName" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[User] 
   SET [UserName] = @UserName   
      ,[UserPassWord]=@UserPassWord
      ,[Email]=@Email
      ,[Phone]=@Phone
      ,[lastChangeUserNameDate]=GETDATE()
      ,[Role]=@Role
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [UserID] = @UserID AND DATEDIFF(m,[lastChangeUserNameDate],GETDATE()) >= 3
          ]]>
    </commandText>
  </dataCommand>
