<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <dataCommand name="AddUserAddressInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
INSERT INTO [dbo].[UserAddress]
   ([UserID]
   ,[CustomerName]
   ,[CustomerPhone]
   ,[CustomerPostCode]
   ,[Province]
   ,[City]
   ,[County]
   ,[Town]
   ,[Village]
   ,[DetailedAddress]
   ,[Tags]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser])
VALUES
  (
  @UserID,
  @CustomerName,
  @CustomerPhone,
  @CustomerPostCode,
  @Province,
  @City,
  @County,
  @Town,
  @Village,
  @DetailedAddress,
  @Tags,
  GETDATE(),
  @InUser,
  GETDATE(),
  @InUser
  )
          ]]>
    </commandText>
  </dataCommand>
  <dataCommand name="AlterUserAddressInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[UserAddress] 
   SET [CustomerName] = @CustomerName   
      ,[CustomerPhone]=@CustomerPhone
      ,[CustomerPostCode]=@CustomerPostCode
      ,[Province]=@Province
      ,[City]=@City
      ,[County]=@County
      ,[Town]=@Town
      ,[Village]=@Village
      ,[DetailedAddress]=@DetailedAddress
      ,[Tags]=@Tags
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [UserID] = @UserID
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="GetUserAddressInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
SELECT @TotalCount=COUNT(1)  
  FROM [dbo].[UserAddress] WITH(NOLOCK)
#StrWhere#

SELECT [AddressID],
       [UserID],
       [CustomerName],
       [CustomerPhone],
       [CustomerPostCode],
       [Province],
       [City],
       [County],
       [Town],
       [Village],
       [DetailedAddress],
       [Tags],
       [InDate],
       [InUser],
       [LastEditDate],
       [LastEditUser]
FROM [dbo].[UserAddress] WITH(NOLOCK)
#StrWhere#
ORDER BY #SortColumnName#
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="RemoveUserAddressInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
DELETE
FROM [dbo].[UserAddress]
#StrWhere#
          ]]>
    </commandText>
  </dataCommand>

</dataOperations>
