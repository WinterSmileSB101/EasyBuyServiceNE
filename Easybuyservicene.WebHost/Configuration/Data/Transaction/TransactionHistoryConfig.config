<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <dataCommand name="AddTransactionItem" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
INSERT INTO [dbo].[TransactionHistory]
   ([TransactionNumber]
   ,[FromUser]
   ,[ToUser]
   ,[Title]
   ,[State]
   ,[Status]
   ,[Description]
   ,[Comment]
   ,[Number]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser])
VALUES
  (
  @TransactionNumber,
  @FromUser,
  @ToUser,
  @Title,
  @State,
  @Status,
  @Description,
  @Comment,
  @Number,
  GETDATE(),
  @InUser,
  GETDATE(),
  @InUser
  )
          ]]>
    </commandText>
  </dataCommand>
  <dataCommand name="AlterTransactionItem" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[TransactionHistory] 
   SET [State]=@State
      ,[State]=@State
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [TransactionNumber] = @TransactionNumber
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="GetTransactionInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
SELECT @TotalCount=COUNT(1)  
  FROM [dbo].[TransactionHistory] WITH(NOLOCK)
#StrWhere#

SELECT [TransactionNumber]
   ,[FromUser]
   ,[ToUser]
   ,[Title]
   ,[State]
   ,[Status]
   ,[Description]
   ,[Comment]
   ,[Number]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser]
FROM [dbo].[TransactionHistory] WITH(NOLOCK)
#StrWhere#
ORDER BY #SortColumnName#
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="RemoveTransactionInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
DELETE
FROM [dbo].[TransactionHistory]
#StrWhere#
          ]]>
    </commandText>
  </dataCommand>

</dataOperations>
