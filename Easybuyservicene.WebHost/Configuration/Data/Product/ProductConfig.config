<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <dataCommand name="AddProductInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
INSERT INTO [dbo].[Product]
   ([ProductID]
   ,[ProductName]
   ,[ImageUrl]
   ,[ImageName]
   ,[ImagePosition]
   ,[Stock]
   ,[ItemType]
   ,[CategoryID]
   ,[IsPublish]
   ,[HomePriority]
   ,[ProductPriority]
   ,[Description]
   ,[DetailDescription]
   ,[OriginalPrice]
   ,[Discount]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser])
VALUES
  (
  @ProductID,
  @ProductName,
  @ImageUrl,
  @ImageName,
  @ImagePosition,
  @Stock,
  @ItemType,
  @CategoryID,
  @IsPublish,
  @HomePriority,
  @ProductPriority,
  @Description,
  @DetailDescription,
  @OriginalPrice,
  @Discount,
  GETDATE(),
  @InUser,
  GETDATE(),
  @InUser
  )
          ]]>
    </commandText>
  </dataCommand>
 
  <dataCommand name="AlterProductInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[Product] 
   SET [ImagePosition]=@ImagePosition
      ,[ImageUrl]=@ImageUrl
      ,[ImageName]=@ImageName
      ,[CategoryID]=@CategoryID
      ,[IsPublish]=@IsPublish
      ,[HomePriority]=@HomePriority
      ,[ProductPriority]=@ProductPriority
      ,[Description]=@Description
      ,[DetailDescription]=@DetailDescription
      ,[Discount]=@Discount
      ,[OriginalPrice]=@OriginalPrice
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [ProductID] = @ProductID
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="AlterProductStock" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[Product] 
   SET [Stock]=@Stock
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [ProductID] = @ProductID
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="GetProductInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
SELECT @TotalCount=COUNT(1)  
  FROM [dbo].[Product] WITH(NOLOCK)
#StrWhere#

SELECT [ProductID]
   ,[ProductName]
   ,[ImageUrl]
   ,[ImageName]
   ,[ImagePosition]
   ,[Stock]
   ,[ItemType]
   ,[CategoryID]
   ,[IsPublish]
   ,[HomePriority]
   ,[ProductPriority]
   ,[Description]
   ,[DetailDescription]
   ,[OriginalPrice]
   ,[Discount]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser]
FROM [dbo].[Product] WITH(NOLOCK)
#StrWhere#
ORDER BY #SortColumnName#
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="RemoveProductInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
DELETE
FROM [dbo].[Product]
#StrWhere#
          ]]>
    </commandText>
  </dataCommand>

</dataOperations>
