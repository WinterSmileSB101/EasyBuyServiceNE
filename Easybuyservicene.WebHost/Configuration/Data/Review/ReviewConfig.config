    </commandText>
  </dataCommand>

  <dataCommand name="GetReviewInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
SELECT @TotalCount=COUNT(1)  
  FROM [dbo].[Review] WITH(NOLOCK)
#StrWhere#

SELECT [ReviewID]
   ,[ProductOROrderID]
   ,[UserID]
   ,[Title]
   ,[Content]
   ,[CheckPassed]
   ,[Score]
   ,[Images]
   ,[Videos]
   ,[FavourCount]
   ,[OpposeCount]
   ,[VoteUsers]
   ,[ReviewDate]
   ,[EBReplay]
   ,[VendorReplay]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser]
FROM [dbo].[Review] WITH(NOLOCK)
#StrWhere#
ORDER BY #SortColumnName#
          ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="RemoveReviewInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[    
DELETE
FROM [dbo].[Review]
#StrWhere#
          ]]>
    </commandText>
  </dataCommand>

</dataOperations>
