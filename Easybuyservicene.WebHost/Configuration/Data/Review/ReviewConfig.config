<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <dataCommand name="AddReviewInfo" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
INSERT INTO [dbo].[Review]
   ([ReviewID]
   ,[ProductOROrderID]
   ,[UserID]
   ,[Title]
   ,[Content]
   ,[CheckPassed]
   ,[Score]
   ,[Images]
   ,[Videos]
   ,[FavourCount]
   ,[OpposeCount]
   ,[VoteUsers]
   ,[ReviewDate]
   ,[EBReplay]
   ,[VendorReplay]
   ,[InDate]
   ,[InUser]
   ,[LastEditDate]
   ,[LastEditUser])
VALUES
  (
  @ReviewID,
  @ProductOROrderID,
  @UserID,
  @Title,
  @Content,
  @CheckPassed,
  @Score,
  @Images,
  @Videos,
  @FavourCount,
  @OpposeCount,
  @VoteUsers,
  @ReviewDate,
  @EBReplay,
  @VendorReplay,
  GETDATE(),
  @InUser,
  GETDATE(),
  @InUser
  )
          ]]>
    </commandText>
  </dataCommand>
  <dataCommand name="AlterReviewReplay" database="EasyBuyCompany" commandType="Text">
    <commandText>
      <![CDATA[                             
UPDATE [dbo].[Review] 
   SET [EBReplay]=@EBReplay
      ,[VendorReplay]=@VendorReplay
      ,[LastEditDate]=GETDATE()
      ,[LastEditUser]=@LastEditUser
WHERE  [ReviewID] = @ReviewID
          ]]>
    </commandText>
  </dataCommand>

